<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h4>Kết quả tìm kiếm</h4>
      <% if @results.present? %>
        <ul class="list-group">
          <% @results.each do |result| %>
            <% if result.is_a?(Employee) %>
              <li class="list-group-item"><%= result.full_name %></li>
            <% else %>
              <li class="list-group-item"><%= result.title %></li>
            <% end %>
          <% end %>
        </ul>
      <% else %>
        <p class="text-center">Không tìm thấy kết quả. Vui lòng thử lại bằng từ khoá khác.</p>
        <%= image_tag('fallback/no_data.jpg', class: "no-document") %>
      <% end %>
    </div>
  </div>
</div>